{
    "compilerOptions": {
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "sourceMap": true,
      "lib": ["ES2020", "DOM"],
      "jsx": "react",
      "module": "commonjs",
      "moduleResolution": "Node",
      "target": "es5",
      "strict": true,
      "resolveJsonModule": true,
      "paths": {
        "@hooks/*": ["./hooks/*"],
        "@components/*": ["./components/*"],
        "@layouts/*": ["./layouts/*"],
        "@pages/*": ["./pages/*"],
        "@utils/*": ["./utils/*"],
        "@typings/*": ["./typings/*"],
        "@styles/*": ["./styles/*"]
      }
    }
  }